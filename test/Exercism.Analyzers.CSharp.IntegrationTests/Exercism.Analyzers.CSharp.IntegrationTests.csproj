<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <IsPackable>false</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="17.0.0" />
    <PackageReference Include="xunit" Version="2.4.1" />
    <PackageReference Include="xunit.runner.visualstudio" Version="2.4.3" />
  </ItemGroup>

  <ItemGroup>
    <SolutionFiles Include="Solutions\**" />
    <Compile Remove="@(SolutionFiles)" />
  </ItemGroup>

  <ItemGroup>
    <SolutionFiles Remove="Solutions\WeighingMachine\Invalid\MissingPropertyDisplayWeight\expected_analysis.json" />
    <SolutionFiles Remove="Solutions\WeighingMachine\Invalid\MissingPropertyDisplayWeight\expected_comments.md" />
    <SolutionFiles Remove="Solutions\WeighingMachine\Invalid\MissingPropertyPrecision - Copy (2)\expected_analysis.json" />
    <SolutionFiles Remove="Solutions\WeighingMachine\Invalid\MissingPropertyPrecision - Copy (2)\expected_comments.md" />
    <SolutionFiles Remove="Solutions\WeighingMachine\Invalid\MissingPropertyPrecision - Copy (3)\expected_analysis.json" />
    <SolutionFiles Remove="Solutions\WeighingMachine\Invalid\MissingPropertyPrecision - Copy (3)\expected_comments.md" />
    <SolutionFiles Remove="Solutions\WeighingMachine\Invalid\MissingPropertyTareAdjustment\expected_analysis.json" />
    <SolutionFiles Remove="Solutions\WeighingMachine\Invalid\MissingPropertyTareAdjustment\expected_comments.md" />
    <SolutionFiles Remove="Solutions\WeighingMachine\Invalid\MissingPropertyWeight\expected_analysis.json" />
    <SolutionFiles Remove="Solutions\WeighingMachine\Invalid\MissingPropertyPrecision\expected_analysis.json" />
    <SolutionFiles Remove="Solutions\WeighingMachine\Invalid\MissingPropertyPrecision\expected_comments.md" />
    <SolutionFiles Remove="Solutions\WeighingMachine\Invalid\MissingPropertyWeight\expected_comments.md" />
    <SolutionFiles Remove="Solutions\WeighingMachine\Invalid\MissingWeighingMachine\expected_analysis.json" />
    <SolutionFiles Remove="Solutions\WeighingMachine\Invalid\MissingWeighingMachine\expected_comments.md" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\Exercism.Analyzers.CSharp\Exercism.Analyzers.CSharp.csproj" />
  </ItemGroup>
  
  <Target Name="CopySolutions" AfterTargets="Build">
    <RemoveDir Directories="$(OutputPath)\Solutions" />
    <Copy SourceFiles="@(SolutionFiles)" DestinationFolder="$(OutputPath)\Solutions\%(RecursiveDir)" SkipUnchangedFiles="true" />
  </Target>

</Project>
